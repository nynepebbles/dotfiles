(defwidget Logo []
	(box :orientation "horizontal"
		(image 	:path "${EWW_CONFIG_DIR}/images/nixos-white.png"
				 	:image-width 20
				 	:image-height 20)
	)
)

(defwindow top_bar
	:monitor 0
	:windowtype "dock"
	:geometry
		(geometry
			:x "0px"
			:y "0px"
			:width "1910px"
			:height "25px"
			:anchor "top center")
	:stacking "fg"
	:exclusive true
	:focusable false
	(box
		:orientation "horizontal"
		(box
				:halign "start"
				:class "nailedUp"
				:spacing 8
				:space-evenly false
				(Logo)
		)
		(box
				:halign "center"
				:class "nailedUp"
				:spacing 8
				:space-evenly false
				(Workspaces)
		)
		(box
				:halign "end"
				:class "nailedUp"
				:spacing 8
				:space-evenly false
				(Date)
				(Time)
		)
	)
)

(defwindow bottom_bar
	:monitor 0
	:windowtype "dock"
	:geometry
		(geometry
			:x "0px"
			:y "0px"
			:width "1910px"
			:height "25px"
			:anchor "bottom center")
	:stacking "fg"
	:exclusive true
	:focusable false
	(box 	:orientation "horizontal"
		(box
				:halign "start"
				:class "nailedDown"
				:spacing 8
				:space-evenly false
				(CPUUsage)
				(MemoryUsage)
				(Temperature)
		)
		(box
				:halign "center"
				:class "nailedDown"
				:spacing 8
				:space-evenly false
				(MPD)
		)
		(box
				:halign "end"
				:class "nailedDown"
				:spacing 8
				:space-evenly false
				(Volume)
				(DiskUsage)
				(Battery)
		)
	)
)

